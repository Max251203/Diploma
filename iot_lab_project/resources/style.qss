/* === –ì–õ–û–ë–ê–õ–¨–ù–´–ï –°–¢–ò–õ–ò === */
* {
    color: rgb(223, 179, 147);
    font-family: "MS Shell Dlg 2";
}
*:focus {
    outline: none;
}

/* === –û–°–ù–û–í–ù–û–ô –§–û–ù === */
QWidget#centralwidget, QDialog {
    background-color: qradialgradient(
        cx:0, cy:1, fx:0, fy:1,
        radius: 1.0,
        stop:0 #000000,
        stop:0.3 #050505,
        stop:0.6 #101010,
        stop:1 #202020
    );
}

/* === QLabel === */
QLabel {
    border: none;
    padding: 2px;
    min-height: 28px;
    background-color: transparent;
    font-size: 10pt;
}

/* === QLineEdit === */
QLineEdit {
    min-height: 30px;
    padding: 3px;
    border-top: 1px solid #ff5e2c;
    border-left: 1px solid #ff5e2c;
    border-bottom: 1px solid #992d1a;
    border-right: 1px solid #992d1a;
    border-radius: 10px;
    background-color: rgba(0, 0, 0, 0.5);
    font-size: 10pt;
    qproperty-alignment: AlignCenter;
}
QLineEdit:focus {
    border: 2px solid #ffbc00;
}

/* === QPushButton === */
QPushButton {
    min-height: 28px;
    padding: 3px;
    border-top: 1px solid #ff5e2c;
    border-left: 1px solid #ff5e2c;
    border-bottom: 1px solid #992d1a;
    border-right: 1px solid #992d1a;
    border-radius: 10px;
    background-color: rgba(0, 0, 0, 0.5);
    font-size: 11pt;
    icon-size: 24px 24px;
}
QPushButton:hover,
QPushButton:pressed {
    background-color: rgba(255, 93, 44, 0.1); 
    color: #ff5e2c; 
}

/* === –ö–ù–û–ü–ö–ê –ü–†–û–§–ò–õ–Ø === */
QPushButton#btnProfileLabel { /* üîß */
    border: none;
    background: transparent;
    font-weight: bold;
    color: #ffbc00;
    padding-left: 10px;
}

/* === –ò–ö–û–ù–ö–ò –í–í–ï–†–•–£ (QToolButton) === */
QToolButton { /* üîß */
    background-color: transparent;
    border: none;
    padding: 4px;
}
QToolButton:hover { /* üîß */
    background-color: rgba(255, 93, 44, 0.2);
    border: none;
}

/* === –í–µ—Ä—Ö–Ω—è—è –ø–∞–Ω–µ–ª—å === */
QFrame#topPanel {
    background-color: rgba(10, 10, 10, 0.6);
    border: 1px solid #ff5e2c;
    border-radius: 10px;
    padding: 5px;
    margin-bottom: 5px;
}

/* === –°—Ç–∞—Ç—É—Å –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è === */
#connectionStatusLabel {
    font-weight: bold;
    color: #ffbc00;
    background-color: transparent;
    min-height: 30px;
    max-height: 30px;
}

#connectionStatusText {
    font-weight: bold;
    color: #ff5e2c;
    background-color: transparent;
    min-height: 30px;
    max-height: 30px;
    min-width: 120px;
    max-width: 120px;
    text-align: left;
}

/* === QComboBox === */
QComboBox {
    padding: 2px;
    min-height: 30px;
    min-width: 200px;
    border: 1px solid #ff5e2c;
    border-radius: 0px;
    background-color: rgba(0, 0, 0, 0.5);
    color: rgb(223, 179, 147);
}

/* === –ö–Ω–æ–ø–∫–∏ –≤ –≤–µ—Ä—Ö–Ω–µ–π –ø–∞–Ω–µ–ª–∏ === */
QFrame#topPanel QToolButton {
    min-width: 32px;
    min-height: 32px;
    max-width: 32px;
    max-height: 32px;
    padding: 4px;
    border-radius: 4px;
}

QFrame#topPanel QToolButton:hover {
    background-color: rgba(255, 93, 44, 0.2);
}

/* –í—ã—Ä–∞–≤–Ω–∏–≤–∞–Ω–∏–µ –≤—Å–µ—Ö —ç–ª–µ–º–µ–Ω—Ç–æ–≤ –≤ –≤–µ—Ä—Ö–Ω–µ–π –ø–∞–Ω–µ–ª–∏ */
QFrame#topPanel QToolButton,
QFrame#topPanel QComboBox,
QFrame#topPanel QLabel,
QFrame#topPanel QPushButton {
    margin: 0;
    padding: 0;
    vertical-align: middle;
}

/* === QComboBox === */
QComboBox {
    padding: 2px;
    min-height: 30px;
    min-width: 150px;
    border: 1px solid #ff5e2c;
    border-radius: 0px; /* –£–±–∏—Ä–∞–µ–º —Å–∫—Ä—É–≥–ª–µ–Ω–∏–µ */
    background-color: rgba(0, 0, 0, 0.5);
    color: rgb(223, 179, 147);
}
QComboBox::drop-down {
    border: 0;
}
QComboBox::down-arrow {
    width: 12px;
    height: 12px;
    border: 1px solid #ff5e2c;
    margin-right: 15px;
}
QComboBox QListView {
    border: 1px solid #ff5e2c;
    padding: 5px;
    background-color: #1a1a1a;
    color: rgb(223, 179, 147);
}
/* === ComboBox –≤ —Ç–∞–±–ª–∏—Ü–µ === */
QTableWidget QComboBox {
    margin: 1px;
    padding: 1px;
    min-height: 26px;
    border-radius: 0px; /* –£–±–∏—Ä–∞–µ–º —Å–∫—Ä—É–≥–ª–µ–Ω–∏–µ */
}

/* === QListWidget (–∫–∞—Ç–µ–≥–æ—Ä–∏–∏) === */
QListWidget {
    padding: 5px;
    border: 1px solid #ff5e2c;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 10px;
}
QListView::item {
    height: 40px;
    padding: 5px;
    border-radius: 5px;
    font-weight: bold;
    margin-bottom: 2px;
}
QListView::item:hover {
    background-color: rgba(255, 93, 44, 0.1);
    color: #ff5e2c;
}
QListView::item:selected {
    border: 1px solid #ff5e2c;
    background-color: rgba(255, 93, 44, 0.2);
    color: rgb(223, 179, 147);
}
#categoryList {
    outline: none;
}
#categoryList::item {
    border-bottom: 1px solid rgba(255, 93, 44, 0.3);
}

/* === QScrollArea + ScrollBar === */
QScrollArea, QScrollArea > QWidget > QWidget {
    background-color: transparent;
    border: none;
}
QScrollBar:vertical {
    border: 1px solid #ff5e2c;
    background: transparent;
    width: 10px;
    margin: 10px 2px 10px 0px;
    border-radius: 6px;
}
QScrollBar::handle:vertical {
    background-color: #ff5e2c;
    min-height: 30px;
    border-radius: 6px;
}
QScrollBar::handle:vertical:hover {
    background-color: #ffbc00;
}
QScrollBar::handle:vertical:pressed {
    background-color: #ff0058;
}
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

/* === QTabWidget + –í–ö–õ–ê–î–ö–ò === */
QTabWidget::pane {
    border: 1px solid #ff5e2c;
    border-radius: 0px; /* üîß —É–±—Ä–∞–Ω–æ —Å–∫—Ä—É–≥–ª–µ–Ω–∏–µ –æ—Å–Ω–æ–≤–Ω–æ–π –æ–±–ª–∞—Å—Ç–∏ */
}
QTabWidget::tab-bar {
    alignment: left;
}
QTabBar::tab {
    padding: 6px;
    font-size: 11pt;
    text-align: center;
    qproperty-iconSize: 24px 24px;
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid #ff5e2c;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    margin-right: 5px;
}
QTabBar::tab:!selected {
    margin-top: 5px;
}
QTabBar::tab:selected {
    background-color: rgba(60, 60, 60, 0.7);
    margin-bottom: -1px;
    color: #ff5e2c;
}

/* === QTableWidget (—Å—Ç–∏–ª—å –≤—ã–¥–µ–ª–µ–Ω–∏—è) === */
QTableWidget {
    background-color: rgba(0, 0, 0, 0.5);
    alternate-background-color: rgba(255, 93, 44, 0.05);
    color: rgb(223, 179, 147);
    border: 1px solid #ff5e2c;
}
QTableView {
    selection-background-color: transparent;
    selection-color: #ff5e2c;
}
QTableView::item:selected {
    background-color: rgba(255, 93, 44, 0.2);
    color: #ff5e2c;
}
QTableView::item:focus {
    outline: none;
    background-color: rgba(255, 93, 44, 0.2);
}
QHeaderView::section {
    background-color: rgba(0, 0, 0, 0.7);
    color: #ffbc00;
    padding: 6px;
    border: 1px solid #ff5e2c;
}

/* === –¢–µ–∫—Å—Ç–æ–≤–æ–µ –ø–æ–ª–µ (–∂—É—Ä–Ω–∞–ª) === */
#textEditLogs {
    background-color: rgba(0, 0, 0, 0.5);
    border: 1px solid #ff5e2c;
    border-radius: 5px;
    font: 10pt "Consolas";
}

/* === –ë–ª–æ–∫–∏ ‚Äî —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞, —Å—É—â–Ω–æ—Å—Ç–∏ === */
#devicesBox, #entitiesBox, #deviceInfo {
    background-color: rgba(0, 0, 0, 0.5);
    border: 1px solid #ff5e2c;
    border-radius: 10px;
    margin: 5px;
    padding: 5px;
}

/* === –ö–∞—Ä—Ç–æ—á–∫–∞ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞ === */
#deviceCard {
    border-radius: 10px;
    padding: -4px;
    margin: 3px;
    background: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 #ffbc00,
        stop:1 #ff0058
    );
}
#deviceInner {
    background-color: rgba(0, 0, 0, 0.9);
    border-radius: 7px;
}
#deviceInner:hover {
    background-color: rgba(0, 0, 0, 0.7);
    color: #ff5e2c;
}

/* === –í–∏–¥–∂–µ—Ç—ã —Å—É—â–Ω–æ—Å—Ç–µ–π === */
#entityItem {
    background-color: rgba(0, 0, 0, 0.5);
    border: 1px solid #ff5e2c;
    border-radius: 10px;
    margin: 5px;
    padding: 10px;
}
#entityStateLabel[stateType="loading"] {
    color: #ffbc00;
    font-weight: bold;
}
#entityStateLabel[stateType="unavailable"] {
    color: #ff6666;
}
#entityStateLabel[stateType="normal"] {
    color: #ffbc00;
}

/* === –ö–Ω–æ–ø–∫–∏ —É–ø—Ä–∞–≤–ª–µ–Ω–∏–π —Å—É—â–Ω–æ—Å—Ç—å—é === */
#btnEntityOn {
    background-color: rgba(60, 30, 0, 0.5);
    min-height: 28px;
    min-width: 80px;
}
#btnEntityOn:hover {
    background-color: rgba(255, 140, 0, 0.5);
    border: 1px solid #ffffff;
    color: #ff5e2c;
}
#btnEntityOff {
    background-color: rgba(60, 0, 0, 0.5);
    min-height: 28px;
    min-width: 80px;
}
#btnEntityOff:hover {
    background-color: rgba(255, 0, 0, 0.5);
    border: 1px solid #ffffff;
    color: #ff5e2c;
}

/* === –ö–Ω–æ–ø–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è === */
#refreshButton {
    background-color: rgba(0, 30, 60, 0.5);
    min-height: 28px;
}
#refreshButton:hover {
    background-color: rgba(0, 140, 255, 0.5);
    border: 1px solid #ffffff;
    color: #ff5e2c;
}

/* === –õ–æ–∞–¥–µ—Ä === */
#loadingLabel {
    font-weight: bold;
    color: #ffbc00;
    font-size: 14px;
    background-color: transparent;
    border: none;
}

/* === ToolTip === */
QToolTip {
    background-color: rgba(0, 0, 0, 0.85);
    color: #ffbc00;
    border: 1px solid #ff5e2c;
    padding: 6px;
    border-radius: 5px;
    font: 9pt "Consolas";
}